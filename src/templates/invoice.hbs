<!DOCTYPE html>
<html>

<head>
  <!-- Latest compiled and minified CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">

  <!-- jQuery library -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

  <!-- Popper JS -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>

  <!-- Latest compiled JavaScript -->
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
  <style>
    .container {
      margin: auto auto 30px auto;
      border: 5px solid red;
    }

    #company p {
      font-size: 12px;
    }


    #colDadosFatura {
      position: relative;
    }

    #rowDadosFatura {
      position: absolute;
      bottom: 0;
      right: 0;
      border: 5px solid blue;
    }
  </style>
</head>


<body>

  <div class="container">
    <div class="row">
      <div class="col col-sm-2"></div>
      <div class="col col-sm-6" id="company">
        <h2>{{company.shortName}}</h2>
        <h5>{{company.longName}}</h5>
        <p>Contribuinte nº {{company.nif}}
          <br>{{company.address}}<br>{{company.postalCode}} {{company.city}}
          <br>Telef. nº {{company.phone}}
          &emsp;
          Fax nº {{company.fax}}
          <br>Email: {{company.email}}
        </p>
        <h5>{{header.name}}</h5>
        <p>{{header.address}}<br>{{header.postalCode}} {{header.city}}
          <br>Telef. nº {{header.phone}}
          &emsp;
          Fax nº {{header.fax}}
          <br>Email: {{header.email}}
        </p>
      </div>
      <div class="col col-sm-4" id="colDadosFatura">
        <div class="row" id="rowDadosFatura">
          <h3>Fatura {{reference}}</h3>
          <p>Data: {{createdAt}}</p>
        </div>

      </div>
    </div>
  </div>

  <div class="container" id="costumer">
    <div class="row">
      <div class="col col-sm-8">
        <h5>{{customer.name}}
          <br>{{customer.address}}<br>{{customer.postalCode}} {{customer.city}}</h5>
      </div>
      <div class="col col-sm-4">
        <p>{{customer.permit}}
          <br> Contribuinte nº {{customer.nif}}</p>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col">
        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col">Código</th>
              <th scope="col">Descrição</th>
              <th scope="col" style="text-align: right">Preço Unit.</th>
              <th scope="col" style="text-align: right">Quantidade</th>
              <th scope="col" style="text-align: right">IVA</th>
              <th scope="col" style="text-align: right">Total Líquido</th>
            </tr>
          </thead>
          <tbody>
            {{#each products}}
            <tr>
              <td>{{this.code}}</td>
              <td>{{this.description}}</td>
              <td style="text-align: right">{{this.unitPrice}}€</td>
              <td style="text-align: right">{{this.quantity}}</td>
              <td style="text-align: right">{{this.tax}}%</td>
              <td style="text-align: right">{{this.liquidTotal}}€</td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col col-sm-6">
        <h3>Impostos</h3>
        <table class="table table-sm table-borderless">
          <thead>
            <tr>
              <th scope="col">Imposto</th>
              <th scope="col" style="text-align: right">Incidência</th>
              <th scope="col" style="text-align: right">Valor</th>
            </tr>
          </thead>
          <tbody>
            {{#each taxes}}
            <tr>
              <td>{{this.tax}}</td>
              <td style="text-align: right">{{this.incidence}}€</td>
              <td style="text-align: right">{{this.value}}€</td>
            </tr>
            {{/each}}
        </table>
      </div>

      <div class="col col-sm-2"></div>

      <div class="col col-sm-4">
        <h3>Sumário</h3>
        <table class="table table-sm table-borderless">
          <tbody>
            {{!-- <tr>
              <td>Soma</td>
              <td style="text-align: right">{{summary.sum}}€</td>
            </tr> --}}
            <tr>
              <td>Total sem IVA</td>
              <td style="text-align: right">{{summary.noTax}}€</td>
            </tr>
            <tr>
              <td>Total de IVA</td>
              <td style="text-align: right">{{summary.tax}}€</td>
            </tr>
        </table>
      </div>
    </div>
  </div>

  <div class="container" style="margin-bottom: 5%">
    <div class="row">
      <div class="col col-sm-4">
        <table class="table table-sm table-borderless">
          <thead>
            <tr>
              <th scope="col">Meio de Pagamento</th>
              <th scope="col" style="text-align: right">Valor</th>
            </tr>
          </thead>
          <tbody>
            {{#each payments}}
            <tr>
              <td>{{this.method}}</td>
              <td style="text-align: right">{{this.value}}€</td>
            </tr>
            {{/each}}
        </table>
      </div>
      <div class="col col-sm-4"></div>
      <div class="col col-sm-4">
        <table class="table" style="bottom: 0">
          <tbody>
            <tr>
              <th>Total</th>
              <td style="text-align: right">{{summary.total}}€</td>
            </tr>
          </tbody>
      </div>
    </div>
  </div>
</body>

</html>