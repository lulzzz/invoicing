<!DOCTYPE html>
<html>

<head>
  <!-- Latest compiled and minified CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">

  <!-- jQuery library -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

  <!-- Popper JS -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>

  <!-- Latest compiled JavaScript -->
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
  <style>
    .container {
      margin: auto auto 30px auto;
      padding: 16px;
    }
    #company {
      margin-top: 10%;
    }
  </style>
</head>


<body>

  <div class="container" id="company">
    <div class="row">
      <div class="col">
        <h3>{{company.name}}</h3>
        <p>{{company.nif}}</p>
        <p>{{company.address}}, {{company.postalCode}} {{company.city}}</p>
      </div>
      <div class="col-sm-3"></div>
      <div class="col-sm-3"></div>
    </div>
  </div>

  <div class="container" id="costumer">
    <div class="row">
      <div class="col-sm-3"></div>
      <div class="col-sm-3"></div>
      <div class="col" style="text-align: right;">
        <h3>{{customer.name}}</h3>
        <p>{{customer.nif}}</p>
        <p>{{customer.address}}, {{customer.postalCode}} {{customer.city}}</p>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col">
        <h3>Fatura {{reference}}</h3>
        <p>Data: {{createdAt}}</p>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col">
        <table class="table table-striped table-borderless">
          <thead>
            <tr>
              <th scope="col">Código</th>
              <th scope="col">Descrição</th>
              <th scope="col" style="text-align: right">Preço Unit.</th>
              <th scope="col" style="text-align: right">Quantidade</th>
              <th scope="col" style="text-align: right">IVA</th>
              <th scope="col" style="text-align: right">Total Ilíquido</th>
            </tr>
          </thead>
          <tbody>
            {{#each products}}
            <tr>
              <td>{{this.code}}</td>
              <td>{{this.description}}</td>
              <td style="text-align: right">{{this.unitPrice}}€</td>
              <td style="text-align: right">{{this.quantity}}</td>
              <td style="text-align: right">{{this.tax}}%</td>
              <td style="text-align: right">{{this.iliquidTotal}}€</td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-sm-6">
        <h3>Impostos</h3>
        <table class="table table-sm table-borderless">
          <thead>
            <tr>
              <th scope="col">Imposto</th>
              <th scope="col" style="text-align: right">Incidência</th>
              <th scope="col" style="text-align: right">Valor</th>
            </tr>
          </thead>
          <tbody>
            {{#each taxes}}
            <tr>
              <td>{{this.tax}}</td>
              <td style="text-align: right">{{this.incidence}}€</td>
              <td style="text-align: right">{{this.value}}€</td>
            </tr>
            {{/each}}
        </table>
      </div>

      <div class="col-sm-2"></div>

      <div class="col-sm-4">
        <h3>Sumário</h3>
        <table class="table table-sm table-borderless">
          <tbody>
            <tr>
              <td>Soma</td>
              <td style="text-align: right">{{summary.sum}}€</td>
            </tr>
            <tr>
              <td>S/IVA</td>
              <td style="text-align: right">{{summary.noTax}}€</td>
            </tr>
            <tr>
              <td>IVA</td>
              <td style="text-align: right">{{summary.tax}}€</td>
            </tr>
        </table>

        </table>
      </div>
    </div>
  </div>

  <div class="container" style="margin-bottom: 5%">
    <div class="row">
      <div class="col-sm-8"></div>
      <div class="col-sm-4">
        <table class="table" style="bottom: 0">
          <tbody>
            <tr>
              <th>Total</th>
              <td style="text-align: right">{{summary.total}}€</td>
            </tr>
          </tbody>
      </div>
    </div>
  </div>
</body>

</html>